{% extends 'layout.html.twig' %}

{% block title %}Laisser un avis{% endblock %}

{% block content %}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-0">Laisser un avis</h5>
                        <small>Trajet {{ ride.lieuDepart }} âžœ {{ ride.lieuArrivee }}</small>
                    </div>
                    <span class="badge bg-light text-success">{{ ride.dateHeureArrivee ? ride.dateHeureArrivee|date('d/m/Y') : '' }}</span>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center mb-4">
                        {% if driver and driver.profile and driver.profile.photo %}
                            <img src="{{ asset('uploads/photos/' ~ driver.profile.photo) }}" alt="Conducteur {{ driver.pseudo }}" class="rounded-circle me-3" width="60" height="60" style="object-fit: cover;">
                        {% else %}
                            <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center me-3" style="width: 60px; height: 60px;">
                                <i class="bi bi-person-fill" style="font-size: 1.8rem;"></i>
                            </div>
                        {% endif %}
                        <div>
                            <div class="fw-semibold">{{ driver ? driver.pseudo : 'Conducteur' }}</div>
                            <div class="text-muted small">Votre avis sera visible par le conducteur.</div>
                        </div>
                    </div>

                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_row(form.note) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.commentaire) }}
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <a href="{{ path('ride_show', {id: ride.id}) }}" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Retour au trajet
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-send"></i> Envoyer mon avis
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
