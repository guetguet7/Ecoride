{% extends 'layout.html.twig' %}

{% block title %}Profil de {{ user.pseudo }}{% endblock %}

{% block content %}

<main class="container my-5">
    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    <div class="text-center mb-5">
        <h1 class="fw-bold">Bienvenue dans votre espace utilisateur</h1>
        <p class="text-muted">Gérez vos trajets, vos covoiturages et vos crédits facilement.</p>
    </div>

    <!-- Carte Profil -->
    <div class="card shadow-sm mb-5">
        <div class="card-body text-center">
            {% if user.profile and user.profile.photo %}
                <img src="{{ asset('uploads/photos/' ~ user.profile.photo) }}" alt="Photo de profil" class="img-fluid rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover;">
            {% else %}
                <div class="bg-secondary rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 150px; height: 150px;">
                    <i class="bi bi-person-fill text-white" style="font-size: 4rem;"></i>
                </div>
            {% endif %}
            {% set roleValue = user.roleType ?? '' %}
            {% set roleLabel = roleValue == 'both'
                ? 'Chauffeur et passager'
                : (roleValue == 'driver'
                    ? 'Chauffeur'
                    : (roleValue == 'passenger' ? 'Passager' : 'Rôle à préciser')) %}
            <h4>{{ user.profile and user.profile.nomComplet ? user.profile.nomComplet : user.pseudo }}</h4>
            <p>Rôle : <span class="badge bg-success">{{ roleLabel }}</span></p>
            <p>Crédits disponibles : <span class="fw-bold text-success">{{ user.credits }}</span></p>
        </div>
    </div>

    <!-- Voitures associées -->
    <div class="card shadow-sm mb-5">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Mes voitures</h5>
            <a href="{{ path('voiture_index') }}" class="btn btn-light btn-sm">
                <i class="bi bi-pencil-square"></i> Gérer
            </a>
        </div>
        <div class="card-body">
            {% if user.voitures|length > 0 %}
                <ul class="list-group list-group-flush">
                    {% for v in user.voitures %}
                        <li class="list-group-item">
                            <div class="fw-semibold">{{ v.modele }} ({{ v.couleur }})</div>
                            <div class="text-muted small">
                                Immat: {{ v.immatriculation }} | Énergie: {{ v.energie }} | 1ère immat: {{ v.datePremiereImmatriculation }}
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            {% else %}
                <p class="text-muted mb-0">Aucune voiture enregistrée.</p>
            {% endif %}
        </div>
    </div>

    <!-- Trajets proposés -->
    <div class="card shadow-sm mb-5">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Mes trajets proposés</h5>
            <a href="{{ path('rides_edit') }}" class="btn btn-light btn-sm">
                <i class="bi bi-plus-circle"></i> Nouveau trajet
            </a>
        </div>
        <div class="card-body">
            {% set ridesList = activeRides is defined ? activeRides : user.rides %}
            {% if ridesList|length > 0 %}
                <div class="list-group">
                    {% for ride in ridesList %}
                        <div class="list-group-item d-flex justify-content-between align-items-start">
                            <div>
                                <div class="fw-semibold">{{ ride.lieuDepart }} ➜ {{ ride.lieuArrivee }}</div>
                                <div class="text-muted small">
                                    Départ: {{ ride.dateHeureDepart ? ride.dateHeureDepart|date('d/m/Y H:i') : '—' }} |
                                    Arrivée: {{ ride.dateHeureArrivee ? ride.dateHeureArrivee|date('d/m/Y H:i') : '—' }} |
                                    Places: {{ ride.nbplace }}
                                </div>
                            </div>
                            <div class="d-flex gap-2">
                                <a class="btn btn-outline-success btn-sm" href="{{ path('ride_show', {id: ride.id}) }}">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <form method="post" action="{{ path('ride_delete', {id: ride.id}) }}" onsubmit="return confirm('Supprimer ce trajet ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete_ride_' ~ ride.id) }}">
                                    <button class="btn btn-outline-danger btn-sm" type="submit">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <p class="text-muted mb-0">Aucun trajet proposé pour le moment.</p>
            {% endif %}
        </div>
    </div>

    <!-- Mes participations -->
    <div class="card shadow-sm mb-5">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Mes participations</h5>
        </div>
        <div class="card-body">
            {% if user.participations|length > 0 %}
                <div class="list-group">
                    {% for participation in user.participations %}
                        <div class="list-group-item d-flex justify-content-between align-items-start">
                            <div>
                                <div class="fw-semibold">{{ participation.ride.lieuDepart }} ➜ {{ participation.ride.lieuArrivee }}</div>
                                <div class="text-muted small">
                                    Départ: {{ participation.ride.dateHeureDepart ? participation.ride.dateHeureDepart|date('d/m/Y H:i') : '—' }} |
                                    Prix: {{ participation.amount }} €
                                </div>
                            </div>
                            <div class="d-flex gap-2">
                                <a class="btn btn-outline-success btn-sm" href="{{ path('ride_show', {id: participation.ride.id}) }}">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <form method="post" action="{{ path('participation_cancel', {id: participation.id}) }}" onsubmit="return confirm('Annuler cette participation ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('cancel_participation_' ~ participation.id) }}">
                                    <button class="btn btn-outline-danger btn-sm" type="submit">
                                        <i class="bi bi-x-circle"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <p class="text-muted mb-0">Aucune participation pour le moment.</p>
            {% endif %}
        </div>
    </div>

    <!-- Avis reçus -->
    <div class="card shadow-sm mb-5" id="mes-avis">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Mes avis reçus</h5>
            <span class="badge bg-light text-success">{{ receivedReviews|length }} avis</span>
        </div>
        <div class="card-body">
            {% if receivedReviews is defined and receivedReviews|length > 0 %}
                <div class="list-group">
                    {% for review in receivedReviews %}
                        <div class="list-group-item">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <div class="fw-semibold">{{ review.author ? review.author.pseudo : 'Passager' }}</div>
                                    <small class="text-muted">{{ review.createdAt|date('d/m/Y') }}</small>
                                </div>
                                <span class="badge bg-success">{{ review.note }}/5</span>
                            </div>
                            <p class="mb-0 mt-2">{{ review.commentaire ?: 'Pas de commentaire fourni.' }}</p>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <p class="text-muted mb-0">Aucun avis reçu pour le moment.</p>
            {% endif %}
        </div>
    </div>

    <!-- Menu des fonctionnalités -->
    <div class="row text-center g-4">
        <div class="col-md-3">
            <a href="{{ path('home') }}" class="text-decoration-none text-dark">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title fw-bold">Rechercher un covoiturage</h5>
                        <p class="text-muted">Trouvez un trajet selon votre destination.</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-3">
            <a href="{{ path('rides_edit') }}" class="text-decoration-none text-dark">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title fw-bold">Proposer un trajet</h5>
                        <p class="text-muted">Publiez votre covoiturage en quelques clics.</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-3">
            <a href="{{ path('app_profile', {'_fragment': 'mes-avis'}) }}" class="text-decoration-none text-dark">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title fw-bold">Mes avis</h5>
                        <p class="text-muted">Consultez les retours de vos passagers.</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-3">
            <a href="{{ path('profile_history') }}" class="text-decoration-none text-dark">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title fw-bold">Historique</h5>
                        <p class="text-muted">Trajets comme conducteur et passager.</p>
                    </div>
                </div>
            </a>
        </div>
    </div>

    <div class="text-center mt-5">
        <a class="btn btn-success text-light" href="{{ path('app_profile_edit') }}">Accéder à mes informations</a>
    </div>
</main>

{% endblock %}
